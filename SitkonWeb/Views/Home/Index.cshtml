@model SitkonWeb.Models.CustomerModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Consulta de persona</h2>
<br />
@using (Html.BeginForm("Validate", "Home"))
{
   
    <form>
        <div class="form-group">
            <label for="exampleInputEmail1">CUIT/ DNI</label>
            @*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresar CUIT/ DNI">*@
            @Html.TextBoxFor(m => m.Cuit, new { @class = "form-control" })
            <small id="emailHelp" class="form-text text-muted">Ingrese el CUIT o DNI a consultar</small>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Sexo</label>            
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem{Text = "Femenino", Value = "Femenino" });
                listItems.Add(new SelectListItem{Text = "Masculino", Value = "Masculino", Selected = true});
                listItems.Add(new SelectListItem{Text = "Otro", Value = "Otro" });
            }

            @Html.DropDownListFor(m => m.Sexo, listItems, new { @class = "form-control" })
        </div>
        <div class="form-check">
            @*<input type="checkbox" class="form-check-input" id="exampleCheck1">*@
            @Html.CheckBoxFor(m => m.ValidaIdentidad, new { @class = "form-check-input" })
            <label class="form-check-label" for="exampleCheck1">Validar identidad</label>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Aceptar</button>
    </form>
}
